<div class="info userInfoBlockJs">
	{{> userInfo }}
</div>
<div class="content">
	<div class="container">
		<div class="controls">
			<div class="controls__item">
				<label>Статус</label>
				<select class="select-style orderStatusJs {{#ifCond formatOrderInfo.status_id '===' 'Новый'}}in-process{{/ifCond}}{{#ifCond formatOrderInfo.status_id '===' 'Выполнен'}}done{{/ifCond}}">
					<option value="in-process" {{#ifCond formatOrderInfo.status_id '===' 'Новый'}}selected{{/ifCond}}>Не выполнен</option>
					<option value="done" {{#ifCond formatOrderInfo.status_id '===' 'Выполнен'}}selected{{/ifCond}}>Выполнен</option>
				</select>
			</div>
			<div class="controls__item">
				<button class="btn-style btn-style_ghost btn-style_svg printOrderJS" disabled>
			<span>
				<svg>
				    <use xlink:href="#print"></use>
				</svg>
				Печать
			</span>
				</button>
			</div>
		</div>

		{{> orderServicesTable}}

		<div class="table__add">
			<a href="services-list" class="table__add-btn btn-style btn-style_green modalOpenJs">
				<svg>
					<use xlink:href="#plus"></use>
				</svg>
			</a>
		</div>

		<div class="table__btns">
			<div class="table__btns-item">
				<a href="change-service" class="btn-style btn-style_green saveOrderChanges" disabled="true">Сохранить</a>
			</div>
			<div class="table__btns-item">
				<a href="#/orders/" class="btn-style btn-style_red">Закрыть</a>
			</div>
		</div>
	</div>
</div>

<div class="modal-container">
	<div class="modal modalJs" id="services-list">
		{{> modalServicesTitle}}
	</div>
</div>

<div class="modal-container">
	<div class="modal modal_info modalJs" id="delete-service">
		<div class="modal__header">
			Удаление услуги
		</div>
		<div class="modal__main">
			<p>
				Выдействительно хотите <span class="br"></span>
				удалить услугу?
			</p>
		</div>
		<div class="modal__footer">
			<span class="btn-style btn-style_gray modalCloseJs">Закрыть</span>
			<span class="btn-style btn-style_red removeTaskIdJs">Удалить</span>
		</div>
	</div>
</div>

<div class="modal-container">
	<div class="modal modal_info modalJs" id="change-service">
		<div class="modal__header">
			Сохранение данных
		</div>
		<div class="modal__main">
			<p>
				Выдействительно хотите <span class="br"></span>
				изменить данные заказа?
			</p>
		</div>
		<div class="modal__footer">
			<span class="btn-style btn-style_gray modalCloseJs">Закрыть</span>
			<span class="btn-style btn-style_green saveTasksDataJs">Сохранить</span>
		</div>
	</div>
</div>

<div class="modal-container">
	<div class="modal modal_info modal_editor modalJs" id="edit-data">
		<div class="modal__header">
			Внесите изменения
			<span class="modal__close modalCloseJs"></span>
		</div>
		<div class="modal__main">
			<form action="" class="edit-data-form" id="userForm">
				<div class="edit-data-form__item">
					<label>ФИО</label>
					<input type="text" class="input-style" id="userName">
				</div>
				<div class="edit-data-form__item">
					<label>Автомобиль</label>
					<input type="text" class="input-style" id="userCar">
				</div>
				<div class="edit-data-form__item">
					<label>Регистрационный номер</label>
					<input type="text" class="input-style" id="userCarNum">
				</div>
				<div class="edit-data-form__item">
					<button type="submit" class="btn-style btn-style_blue editUserInfoBtnJS">Подтвердить</button>
				</div>
			</form>
		</div>
	</div>
</div>
